package com.capgemini.thread.Creatingthread;

public class PVR {
	 synchronized void confirmTicket() {
		for(int i=0;i<4;i++) {
			System.out.println(i);
			//try {
				//Thread.sleep(500);
			//} catch (InterruptedException e) {
			//	System.out.println(e.getMessage());
				try {
					wait();
					notify();
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
		}
	}


